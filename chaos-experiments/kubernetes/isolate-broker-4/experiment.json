{
    "version": "0.1.0",
    "title": "Zeebe-TT  isolate(network partition) broker-4 experiment",
    "description": "Zeebe should be Available",
    "contributions": {
        "reliability": "high",
        "availability": "high"
    },
    "configuration": {
        "namespace": {
            "type": "env",
            "key": "CHAOS_TARGET_NAMESPACE"
        }
    },
    "steady-state-hypothesis": {
        "title": "Zeebe is alive",
        "probes": [
            {
                "name": "All pods should be ready",
                "type": "probe",
                "tolerance": 0,
                "provider": {
                    "type": "process",
                    "path": "verify-readiness-tt-broker.sh",
                    "timeout": 900
                }
            }
        ]
    },
    "method": [
        {
            "type": "action",
            "name": "Disconnect broker-4",
            "provider": {
                "type": "process",
                "path": "disconnect-broker.sh",
                "arguments": ["broker-4", "${namespace}"]
            },
            "pauses": {
                "after": 300
            }
        }
    ],
    "rollbacks": [
        {
            "type": "action",
            "name": "Reconnect broker-4",
            "provider": {
                "type": "process",
                "path": "reconnect-broker.sh",
                "arguments": ["broker-4", "${namespace}"]
            },
            "pauses": {
                "before": 10
            }
        }
    ]
}
